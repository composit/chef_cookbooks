upstream <%= @full_name %> {
  server unix:/u/apps/<%= @app_name %>/shared/sockets/unicorn.sock fail_timeout=0;
}

server {
  listen 80;
  server_name <%= @domain %>;
  <% if @ssl_only -%>
  rewrite ^(.*) https://$host$1 permanent;
  <% else -%>
  include /etc/nginx/sites-include/<%= @full_name %>;
  <% end -%>
}

